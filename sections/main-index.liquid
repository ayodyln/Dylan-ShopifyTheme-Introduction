<section class="mx-auto max-w-7xl px-6">
  <hgroup id="Hero__Section" class="h-[600px] flex flex-col justify-center">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">{{ shop.name }} Store</h1>
    <p class="mt-6 text-lg leading-8 text-gray-600">{{ shop.description }}</p>
  </hgroup>

  <div id="product" class="space-y-8">
    <h3 class="text-2xl font-semibold">{{ collections["frontpage"].title }} Collection</h3>

    <ul class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
      {% for p in collections["frontpage"].products %}
        <li>
          <a href="{{ p.url }}" class="h-56 w-full space-y-3 block">
            <figure class="h-2/3 overflow-hidden rounded-lg aspect-auto">
              <img
                src="{{ p.featured_image |  image_url: width: 500 }}"
                alt="{{ p.title }}"
                class="h-auto w-full">
            </figure>
            <footer class="h-1/3 min-w-0">
              <h4 class="font-medium">{{ p.title }}</h4>
              <p>{{ p.price | money }}</p>
            </footer>
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>


{% schema %}
  {
    "name": "Main Index",
    "settings": [],
    "presets": [
      {
        "name": "Main Index"
      }
    ]
  }
{% endschema %}