{% schema %}
  {
    "name": "Product-Index",
    "settings": [
      {
        "type": "color",
        "id": "product_text",
        "label": "Product text",
        "default": "#000000"
      }
    ],
    "presets": [
      {
        "name": "Product-Index"
      }
    ]
